- semantic_navigation :devise_links do |nav|

  - if controller_name != 'sessions'
    = nav.item 'Sign in', :link => new_session_path(resource_name)

  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = nav.item "Sign in with #{provider.to_s.titleize}", :link => omniauth_authorize_path(resource_name, provider)

  - if devise_mapping.registerable? && controller_name != 'registrations'
    = nav.item 'Sign up', :link => new_registration_path(resource_name)

  - if devise_mapping.recoverable? && controller_name != 'passwords'
    = nav.item 'Forgot your password?', :link => new_password_path(resource_name)

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = nav.item "Didn't receive unlock instructions?", :link => new_unlock_path(resource_name)