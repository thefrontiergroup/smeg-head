- if @tree.contents.count == 0
  Nothing in the repo
%div
  SSH URL:
  = link_to @repository.to_ssh_url, 'ssh://'+@repository.to_ssh_url
%h3 Branches
%ul.branches
  - @repository.to_grit.branches.each do |branch|
    %li= link_to branch.name, user_repository_tree_root_path(@repository.owner, @repository, branch.name)
%h3 Tree
%ol
  - @tree.contents.each do |content|
    - case content.class.name
    - when 'Grit::Blob'
      = render 'blob', blob: content
    - when 'Grit::Tree'
      = render 'tree', tree: content
    - else
      = render template: 'inspect', content: content